[core]
	excludesfile = ~/.config/git/ignore

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[user]
	name = "Abhi Agarwal"
	email = {{ .email | quote }}
[init]
	defaultBranch = main
[gpg]
	program = /opt/homebrew/bin/gpg

[includeIf "gitdir:~/Developer/GeorgiaTech/"]
    path = ~/Developer/GeorgiaTech/.gitconfig

[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://github.gatech.edu"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[push]
	autoSetupRemote = true
	followTags = true
[pull]
	rebase = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[rebase]
	updateRefs = true
	autoStash = true
[merge]
	conflictstyle = zdiff3
[rerere]
	enabled = true